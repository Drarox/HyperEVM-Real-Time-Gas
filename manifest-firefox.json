{
  "manifest_version": 3,
  "name": "HyperEVM Real-Time Gas",
  "version": "1.0.1",
  "description": "Track gas fees in real-time on HyperEVM network",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://rpc.hyperliquid.xyz/*",
    "https://api.coingecko.com/*"
  ],
  "background": {
    "scripts": [
      "src/background.js"
    ]
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "HyperEVM Real-Time Gas"
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "hyperevm-gas@drarox.dev"
    }
  }
}